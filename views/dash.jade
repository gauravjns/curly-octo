extends layoutonly

block content
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.4.9/angular.min.js')
    script(src='./javascripts/moment.js')  
    script(src="https://cdnjs.cloudflare.com/ajax/libs/angular-moment/1.0.0-beta.5/angular-moment.min.js")
    script(src='./javascripts/userdash.js')
    body#page-top.index(ng-app='myapp')
    br
    br
    br
    br
    section(style='padding: 25px 0px 15px 0px; font-family: "Open Sans", sans-serif;')
      .container
        .row
          .col-md-3.text-justify(style='margin-left:1.6%; border-right: 1px solid #d9d9d9; padding-right:3%')
            .text-center
              a(href="/", title="Home")
                img(src='#{sess.userimg}', style='border-radius:10% 10% ; background-color:#949494; height:140px; width:140px;')
              a(title='Change Profile Picture', data-toggle='modal', data-target='#profilePicModal', style='cursor:pointer; position:absolute; margin-left: -82px;margin-top: 113px;')
                i.fa.fa-camera(style='font-size:1.5em; color:rgba(12,21,25,0.8);')
              h4(style='text-transform:none;') #{sess.username}
            hr
            ul.list-group(role='tablist', style='margin-top:0px;')
              li.list-group-item.hpanel.active(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#home', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                    h5(style='text-decoration:none; text-transform:none;')
                      i.fa.fa-home(style='font-size:1.2em; ')
                      | &nbsp; Home
                      span.badge(style='background-color:#59C3C1;text-align:right; float : right; ') 10
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#article', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-pencil-square-o(style='font-size:1.2em; ')
                    | &nbsp; Articles
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#participate', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-hand-paper-o(style='font-size:1.2em; ')
                    | &nbsp; Participate
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#campaign', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-flag-o(style='font-size:1.2em; ')
                    | &nbsp; Campaign
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ') 10
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#organization', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-sliders(style='font-size:1.2em; ')
                    | &nbsp; Organization
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ') 10
            
              br            
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#notification', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-bell-o(style='font-size:1.2em; ')
                    | &nbsp; Notification
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#connection', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-heart-o(style='font-size:1.2em; ')
                    | &nbsp; Connections
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='/messages?thread=4',  style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-envelope-o(style='font-size:1.2em; ')
                    | &nbsp; Message
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              li.list-group-item.hpanel(style='padding: 4px 15px; border-radius: 5px 5px;')
                a(href='#setting', aria-controls='home', role='tab', data-toggle='tab' style="text-decoration: none;")          
                  h5(style='text-decoration:none; text-transform:none;')
                    i.fa.fa-gears(style='font-size:1.2em; ')
                    | &nbsp; Setting
                    span.badge(style='background-color:#59C3C1;text-align:right; float : right; ')
              
            hr
            .text-center
              a.btn.btn-primary.btn-sm(href='#help', style='text-transform: none; background-color: rgb(255, 255, 255); color:black;  border-radius: 2px 2px;  border-color: rgb(47, 207, 85);', aria-controls='home', role='tab', data-toggle='tab') Need Help
          .col-md-8.col-sm-offset-1.text-justify(style='margin-left:2%; padding-left: 3%; ')
            .tab-content
              #home.tab-pane.active(role='tabpanel')
                include dfeed.jade
              #article.tab-pane(role='tabpanel')
                h5(style="color:#777;") Stories
                  a.btn.btn-primary.btn-sm( data-toggle='modal', data-target='#newArticle', style=" margin-top:-5px;text-transform: none;background-color: rgb(47, 207, 85);color: white;border-radius: 20px 20px;float: right;border-color: rgb(47, 207, 85);") New Article
                br
                include darticles.jade
              #participate.tab-pane(role='tabpanel')
                h5(style="color:#777; text-transform:none;") Events, Volunteering & Internships 
                  a.btn.btn-primary.btn-sm(href='/', style=" margin-top:-5px;text-transform: none;background-color:rgb(47, 207, 85);color: white;border-radius: 20px 20px;float: right;border-color: rgb(47, 207, 85);") Apply Now  
                br
                include dparticipate.jade
              #campaign.tab-pane(role='tabpanel')
                h5(style="color:#777;") campaign
                hr
                span(ng-controller = "campController", ng-init="init(#{sess.userid})")
                  include dcampaign.jade
              #organization.tab-pane(role='tabpanel')
                h5(style="color:#777;") organization
                hr
                span(ng-controller = "orgController", ng-init="init(#{sess.userid})")
                  include dorganization.jade
              #notification.tab-pane(role='tabpanel')
                h5(style="color:#777;") notification
                hr
                include dnotification.jade
              #setting.tab-pane(role='tabpanel')
                h5(style="color:#777;") setting
                hr
                include dsetting.jade
              #connection.tab-pane(role='tabpanel')
                include dfollow.jade
              #help.tab-pane(role='tabpanel')
                h5(style="color:#777;") help
                hr
                include dhelp.jade
                
       
    #profilePicModal.modal.fade(style='display: none;', aria-hidden='true')
      .modal-dialog.modal-sm
        .modal-content(style='border-radius:0px;')
          .modal-body
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') &times;          
            h4.modal-title(style='color:#CD222D; text-align:center;') Change Picture
            br              
            .text-center
              img(src='#{sess.userimg}', width='180', height='180', style='padding: 3px; border: 1px solid #b0b0b0; border-radius:50% 50% 50% 50%; background-color:#A0A0A0;')              
            form.form-horizontal(action='/forms/upload/image', style='padding-top:20px;', method='post', enctype='multipart/form-data')
              .form-group
                .text-center
                  input(required='', type='file', name='profilepic', accept='image/*', style='padding-left:17%;')              
              .form-group
                .text-center
                  button.btn.btn-primary(type='submit') Update
        