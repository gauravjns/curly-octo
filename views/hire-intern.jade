                span.input-group-addon(style='border-radius:0px;')
                  i.glyphicon.glyphicon-calendar
              script.
                $('.input-group.date').datepicker({
                startDate: "today",
                format: "dd-M-yyyy"
                });
            .form-group
              label.col-sm-4.control-label Number of Interns required *
              .col-sm-6
                input.form-control(type='number', name='number', placeholder='Number of Interns Required', required='')
            .form-group
              label.col-sm-4.control-label Who Should Apply? 
              .col-sm-6
                input.form-control(type='text', name='qualification', placeholder='Qualification of applicants if any')
