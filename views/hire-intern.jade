              .col-sm-6
                input.form-control(type='text', name='name', placeholder='For ex. Research, Operations, Public Outreach, Content Writing etc.  ', required='required')
            .form-group
              label.col-sm-4.control-label Type of Internship
              .col-sm-6
                select.selectpicker.show-menu-arrow.form-control(required='required', name='types')
                  option(value=' Regular') Regular
                  option(value=' Virtual') Virtual ( Work on computer, work anywhere )
            .form-group
              label.col-sm-4.control-label Internship Description *
              .col-sm-6(style='text-align: left;')
