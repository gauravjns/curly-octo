                  input#autocomplete.form-control(placeholder='Enter address of work', onfocus='geolocate()', required='', name='location', type='text')
            .form-group
              label.col-sm-4.control-label Duration of Internship *
              .col-sm-6
                input.form-control(type='text', name='duration', placeholder='Enter duration like two months or three months etc.', required='')
            .form-group
