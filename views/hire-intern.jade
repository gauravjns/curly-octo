block content
    script(src='javascripts/bootstrap-datepicker.js')
    section#team
      .container
        .row
          .col-lg-12.text-center
            h2.section-subheading(style='color:#184257;')
              | Hello !!
            h5
              br
              | Post your Internship in a minute.
        .row.text-center
          form.form-horizontal(enctype='application/x-www-form-urlencoded', action='/form/post', style='padding-top:20px;', method='post')
            input(type='hidden', name='type', required='', value='internship')
