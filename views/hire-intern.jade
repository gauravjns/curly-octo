              label.col-sm-4.control-label Start date of Internship *
              .col-sm-3.input-group.date(style='padding-left:15px;')
                input.form-control(type='text', required='required', name='date')
                span.input-group-addon(style='border-radius:0px;')
                  i.glyphicon.glyphicon-calendar
              script.
                $('.input-group.date').datepicker({
                startDate: "today",
                format: "dd-M-yyyy"
                });
            .form-group
              label.col-sm-4.control-label End date of Internship *
              .col-sm-3.input-group.date(style='padding-left:15px;')
                input.form-control(type='text', required='required', name='enddate')
                span.input-group-addon(style='border-radius:0px;')
                  i.glyphicon.glyphicon-calendar
              script.
                $('.input-group.date').datepicker({
