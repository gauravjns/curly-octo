                input.form-control(type='text', name='stipend', placeholder='For ex. 5,000/month, Expenses reimbursed or none', required='')
            .form-group
              label.col-sm-4.control-label Select Cause *
              .col-sm-6
                select.selectpicker.show-menu-arrow.form-control(required='required', name='causes[]', multiple='')
