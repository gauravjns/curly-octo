extends layout

block content
  script(src='javascripts/write.js')
  script(src='javascripts/ckeditor/ckeditor.js')
  body#page-top.index
    .container(style='margin-top:90px;')
      .row
        .col-lg-10(style='margin-left:100px;')
          .col-sm-10(style='    margin-bottom: -20px;   margin-left: -15px; color: rgb(114, 131, 115);')
            h4(style='text-transform:none;') Title of new Article
            br                 
          form.form-horizontal(action='./php/story.php', method='post', onsubmit='submitstory.disabled = true;')
            .form-group
              .col-sm-10
                input.form-control(required='', name='title', placeholder='Enter title here')                
            br                  
            .form-group
              .col-sm-10
                span(style='font-weight: 600;color: rgb(114, 131, 115);') Content
                |                                 
                textarea#editor1.form-control(required='', name='story', placeholder='Add a comment ..', style='height:350px;')
                |     
                |                                
                script.
                  CKEDITOR.replace( 'editor1');
            |                     
            .form-group
              .col-sm-10
                span(style='font-weight: 600;color: rgb(114, 131, 115);') Excerpt
                |                                 
                textarea.form-control(name='excerpt', placeholder='Two line summary', style='height:80px;')
                    
        
        .col-xs-2(style='background-color:#EAF2F4; margin-top:4em; margin-left:-100px')
          h5.text-center Publish
          |                     
          .form-group
            .col-sm-12(style='  margin-top: -10px;  margin-left: -13px;')
              span(style='font-size:10px;')
                | Status: 
                span#status(style='font-size: 12px; color: #EA7878;') Saved 12 min ago
            |                             
            br
            |                             
            .col-sm-6
              button.btn.btn-primary.btn-sm(type='submit', style='text-transform: none; background-color: rgb(47, 207, 85);  border-radius: 4px 4px;  border-color: rgb(47, 207, 85);', name='submitreport') Save
            |                             
            .col-sm-6
              button.btn.btn-primary.btn-sm(type='submit', name='submitreport', style='  text-transform: none; background-color: rgb(47, 207, 85);  border-radius: 4px 4px;  border-color: rgb(47, 207, 85);') Preview
            |                             
            |                             
            .form-group
              .col-sm-12
                button.btn.btn-primary.btn-sm(type='submit', name='submitreport', style='  text-transform: none;background-color: rgb(117, 148, 244);border-radius: 4px 4px;border-color: rgb(117, 148, 244);margin-top: 15px;margin-bottom: 10px;margin-left: 35px;') Publish
        |            
        |             
        .col-xs-2(style='background-color:#EAF2F4; margin-top:4em; margin-left:-100px')
          h5.text-center Featured Image
          |                      
          form.form-group(action='php/userBackImage.php', style='padding-top:20px;', method='post', enctype='multipart/form-data')
            .form-group
              div(style='margin-left: -13px;')
                input(size="60", required='', type='file', name='myfile', accept='image/*', style='margin-left:0px;')
            |                         
            .form-group
              .col-sm-12.text-center
                button.btn.btn-primary.btn-sm(type='submit', name='submitimg', style='  text-transform: none;background-color:  rgb(47, 207, 85);   border-radius: 4px 4px;border-color: rgb(47, 207, 85);') Upload
